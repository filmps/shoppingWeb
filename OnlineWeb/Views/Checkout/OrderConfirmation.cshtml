@model OnlineWeb.Models.Order

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Amado - Furniture Ecommerce Template | Confirm</title>
    <style>
        .confirmation {
            display: flex;
            flex-direction: column;
            /* Stack items vertically */
            justify-content: center;
            align-items: center;
            text-align: center;
            height: 20vh;
            /* Use the full height of the viewport */
            margin: 0;
            /* Remove default margin */
        }

        .confirmation img {
            max-width: 10%;
            /* Control the size of the image */
            max-height: 10vh;
            /* And/or control the height of the image */
            margin-bottom: 20px;
            /* Adds some space between the image and the text */
        }
    </style>


    <!-- Favicon  -->
    <link rel="icon" href="img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/css/core-style.css">
    <link rel="stylesheet" href="/style.css">

</head>

<body>

    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">



        <div class="cart-table-area section-padding-100">
            <div class="cart-title">
                <h2>Order Confirmation</h2>
            </div>
            <div class="confirmation">
                <!-- Ensure the path to your image is correct -->
                <img src="~/img/core-img/check.png" alt="Order Confirmed">
                <p>Your order has been placed successfully!</p>
            </div>
            <a href="@Url.Action("OrderDetails", new { orderId = Model.OrderId })">View Details</a>


        </div>
    </div>
    <!-- ##### Main Content Wrapper End ##### -->


    <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
    <script src="/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/js/plugins.js"></script>
    <!-- Active js -->
    <script src="/js/active.js"></script>

</body>

</html>