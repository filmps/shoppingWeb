@model OnlineWeb.Models.ViewModels.CartViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Amado - Furniture Ecommerce Template | Cart</title>

    <!-- Favicon  -->
    <link rel="icon" href="/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/css/core-style.css">
    <link rel="stylesheet" href="/style.css">

</head>

<body>
        <div class="cart-table-area section-padding-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <div class="cart-title mt-50">
                            <h2>Shopping Cart</h2>
                        </div>
                        @if (Model?.Items != null && Model.Items.Any())
                        {
  <div class="cart-table clearfix">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td class="cart_product_img">
                        <a href="#"><img src="@item.ProductImageUrl" alt="Product"></a>
                    </td>
                    <td class="cart_product_desc">
                        <h5>@item.ProductName</h5>
                    </td>
                    <td class="price">
                        <span>@item.Price.ToString("C")</span> <!-- C for currency formatting -->
                    </td>
                    <td class="qty">
                        <div class="qty-btn d-flex">
                            <p>Qty</p>
                            <div class="quantity">
                                <!-- Ensure unique IDs if you plan to use them -->
                                <div class="quantity" data-item-id="@item.ProductId">
                              <form asp-controller="Cart" asp-action="UpdateItemQuantity" method="post">
                         <input type="hidden" name="productId" value="@item.ProductId" />
                       <input type="hidden" name="quantity" value= "@(item.Quantity - 1)" />
                 <button type="submit" class="qty-minus" style="background: none; border: none; cursor: pointer; outline: none;"><i class="fa fa-minus" aria-hidden="true"></i></button>
                </form>
        
                        <input type="number" class="qty-text" value="@item.Quantity" readonly>
        
                       <form asp-controller="Cart" asp-action="UpdateItemQuantity" method="post">
                         <input type="hidden" name="productId" value="@item.ProductId" />
                       <input type="hidden" name="quantity" value= "@(item.Quantity + 1)" />
                 <button type="submit" class="qty-plus" style="background: none; border: none; cursor: pointer; outline: none;"><i class="fa fa-plus" aria-hidden="true"></i></button>
                </form>
                     </div>
                            </div>
            <form asp-action="DeleteItem" asp-controller="Cart" asp-route-id="@item.ProductId" method="post" onsubmit="return confirmDelete();">
        <button type="submit" data-toggle="tooltip" data-placement="left" title="Delete Item" style="background: none; border: none; padding: 0; margin-left: 10px; margin-top:10px">
            <img src="/img/core-img/delete.png" alt="" width="20" height="20">
        </button>
        @Html.AntiForgeryToken()
        </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
                    </div>
                    <div class="col-12 col-lg-4">
                        <div class="cart-summary">
                            <h5>Cart Total</h5>
                            <ul class="summary-table">
    <li><span>subtotal:</span> <span>$@((Model?.TotalPrice ?? 0).ToString("0.00"))</span></li>
    <li><span>delivery:</span> <span>Free</span></li>
   <li><span>total:</span> <span>$@((Model?.TotalPrice ?? 0).ToString("0.00"))</span></li>
</ul>

                            <div class="cart-btn mt-100">
                                <a href="cart.html" class="btn amado-btn w-100">Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Main Content Wrapper End ##### -->

    <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
    <script src="/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/js/plugins.js"></script>
    <!-- Active js -->
    <script src="/js/active.js"></script>
     <script>
        function confirmDelete() {
     return confirm('Are you sure you want to delete this item?');
   }
    </script>
</body>

</html>