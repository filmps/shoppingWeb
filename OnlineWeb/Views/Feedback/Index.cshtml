@model OnlineWeb.Models.Feedback

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Amado - Furniture Ecommerce Template | Feedback</title>

    <!-- Favicon  -->
    <link rel="icon" href="img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/css/core-style.css">
    <link rel="stylesheet" href="/style.css">

</head>

<body>


    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">
        <div class="cart-table-area section-padding-100">
            <div class="container-fluid">
                <div class="column">
                    <div class="col-12 col-lg-8">
                        <div class="checkout_details_area mt-50 clearfix">

                            <div class="cart-title">
                                <h2>Feedback</h2>
                            </div>

                            <form asp-controller="Feedback" asp-action="SendFeedback" method="post">
                                
                                <div class="column">
                                    <div class="col-md-6 mb-3">
                                    <input asp-for="UserEmail" type="email" class="form-control" id="email" placeholder="Contact Email" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <input asp-for="Title" type="text" class="form-control" id="title" value=""
                                            placeholder="Title" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <textarea asp-for="Content" type="text" class="form-control" id="content"
                                            value="" placeholder="Content" required> </textarea>
                                    </div>
                                </div>
                                <div class="cart-btn mt-100">
                                    <button type="submit" class="btn amado-btn w-50">Submit</button>
                                </div>
                            </form>
                        </div>



                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- ##### Main Content Wrapper End ##### -->


    <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
    <script src="js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="js/plugins.js"></script>
    <!-- Active js -->
    <script src="js/active.js"></script>

</body>

</html>